@mixin bg_gradient_l1($color_1, $color_2, $color_3, $percent_1, $percent_2) {

  // W3C Standard
  background: linear-gradient(to bottom, $color_1 ($percent_1 * 100) * 1%,
                                         $color_2 ($percent_2 * 100) * 1%);

  // Chrome,Safari4+
  background: -webkit-gradient(linear, left top, left bottom, color-stop($percent_1, $color_1), color-stop($percent_1, $color_2) );

  // Chrome10+, Safari5.1+
  background: -webkit-linear-gradient(top, $color_1 ($percent_1 * 100) * 1%,
                                           $color_2 ($percent_2 * 100) * 1%);

  // FF3.6+
  background: -moz-linear-gradient(center top,$color_1 ($percent_1 * 100) * 1%, $color_2 ($percent_2 * 100) * 1% );

  // Opera 11.10+
  background: -o-linear-gradient(top, $color_1 ($percent_1 * 100) * 1%,
                                      $color_2 ($percent_2 * 100) * 1%);

  // IE10+
  background: -ms-linear-gradient(top, $color_1 ($percent_1 * 100) * 1%, $color_2 ($percent_2 * 100) * 1%);

  //// IE6-8
  //filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=$color_1, endColorstr=$color_2);
  //
  // Fallback
  background-color: $color_3;

}

@mixin anchor_button_bg_gradient($color_1, $color_2, $color_3) {
  @include bg_gradient_l1($color_1, $color_2, $color_3, 0.05, 1);
}

@mixin anchor_button($bg_gradient_1, $bg_gradient_2, $bg_color, $bg_hover,
                     $font_color, $border_color, $box_shadow, $text_shadow) {

  @include anchor_button_bg_gradient($bg_gradient_1, $bg_gradient_2, $bg_color);

  @include css_box_shadow(0, 1px, 0, 0, $box_shadow, inset);
  @include border_radius(6px);
  border: 1px solid $border_color;

  display:inline-block;


  color: $font_color;
  font-family: 'liberation-sans';
  line-height: 2.55ex;
  font-size: 1.01em;
  font-weight: bold;

  margin: 0;
  padding: 0.5ex 2ex;

  text-decoration: none;
  text-shadow: 1px 1px 0 $text_shadow;

  &:link, &:visited {
    color: $font_color;
  }

  &:hover {
    @include anchor_button_bg_gradient($bg_gradient_2, $bg_gradient_1, $bg_hover);
  }

  &:active {
    position: relative;
    top: 1px;
  }

  /* CSS button was 'originally' generated by CSSButtonGenerator.com */
}

