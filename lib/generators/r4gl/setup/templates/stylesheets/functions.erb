@mixin border_radius($radius) {
  -moz-border-radius: $radius;
  -webkit-border-radius: $radius;
  border-radius: $radius;
}

@mixin css_box_shadow($x, $y, $blur, $spread, $color, $type:'') {
  -moz-box-shadow:    $x $y $blur $spread $color #{$type};
  -webkit-box-shadow: $x $y $blur $spread $color #{$type};
  box-shadow:         $x $y $blur $spread $color #{$type};
}

@mixin box_shadow($x, $y, $blur, $color) {
  @include css_box_shadow($x, $y, $blur, 0, $color);
}

@mixin box_glow($x, $y, $blur, $color) {
  @include css_box_shadow($x, $y, $blur, 0, $color, inset);
}

