@import "globals.css.scss";

body {
  background-color: #fff;
  color: #333;
  margin: 20px;

  @include main_font_style();
}

p, ol, ul, td {
  font-size: 1em;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a {
  color: #000;
  &:visited {
    color: #666;
  }
  &:hover {
    color: #fff;
    background-color: #000;
  }
}

div {
  &.field, &.actions {
    margin-bottom: 10px;
  }
}

fieldset {
  border: 0;
}